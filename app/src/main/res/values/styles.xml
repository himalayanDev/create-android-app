<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/toolbar_background</item>
        <item name="colorAccent">@color/toolbar_items</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //Page
    <style name="Page">

    </style>

    <style name="Page.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Page.FullScreen" parent="Page.FullWidth">
        <item name="android:layout_marginLeft">@dimen/page_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/page_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/page_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/page_vertical_margin</item>
    </style>

    <style name="Page.FullScreen.WithPadding">
        <item name="android:padding">@dimen/page_padding</item>
    </style>

    //Container
    <style name="Container">

    </style>
    <style name="Container.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.FullWidth.LinearLayout">
        <item name="android:orientation">vertical</item>
    </style>

    //Container-Action
    <style name="Container.Action" parent="Container.FullWidth">
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
    </style>

    <style name="Container.Action.Field" parent="Container.FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">8</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Container.Action.Button" parent="Container.FullWidth">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/form_field_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:background">@drawable/text_border_default</item>
    </style>

    //Form-Container
    <style name="FormContainer" parent="Container.FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/surface_white_sheet</item>
    </style>

    <style name="FormContainer.Normal" >
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>

    <style name="FormContainer.Small" >
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:padding">@dimen/margin_large</item>
    </style>


    //FormField
    <style name="FormField" parent="Container.FullWidth">
        <item name="android:layout_height">@dimen/form_field_height</item>
        <item name="android:paddingLeft">@dimen/form_field_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/form_field_horizontal_padding</item>
        <item name="android:background">@drawable/text_border_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="FormField.Default">

    </style>

    <style name="FormField.TextArea">
        <item name="android:layout_height">@dimen/form_field_text_area_height</item>
        <item name="android:padding">@dimen/form_field_horizontal_padding</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine|textCapWords</item>
        <item name="android:lines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:minLines">4</item>
    </style>

    <style name="FormField.Dropdown">
        <item name="android:drawableRight">@drawable/vic_drop_down</item>
    </style>

    <style name="FormField.UserName">
        <item name="android:gravity">center</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="FormField.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="FormField.Password.Centered">
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="FormField.Error" parent="Container.FullWidth">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/alert</item>
    </style>

    <style name="FormField.Label" parent="Container.FullWidth">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="FormField.Alert" parent="Container.WrapContent">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="FormField.TextInputLayout" parent="Theme.MaterialComponents.DayNight">
        <!-- ... -->
    </style>

    //Header
    <style name="Header" parent="Container.FullWidth">

    </style>

    <style name="Header.Card">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Header.ToolBar" parent="Container.WrapContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Header.Page" parent="Container.WrapContent">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginLeft">@dimen/margin_x_small</item>
    </style>

    <style name="Header.Tab" parent="Container.WrapContent">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Header.Form" parent="Container.WrapContent">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Button
    <style name="Button" >


    </style>

    <style name="Button.FullWidth" parent="Container.FullWidth">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="Button.Toolbar" parent="Container.WrapContent">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/surface_white_sheet</item>
        <item name="android:padding">4dp</item>
    </style>

    //ImageHolder
    <style name="ImageHolder" parent="Container.WrapContent">

    </style>
    <style name="ImageHolder.CenterHorizontal">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageHolder.CenterInParent" >
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/surface_white_sheet</item>
    </style>

    <style name="ImageHolder.Fab">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="rippleColor">@color/accent</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:src">@drawable/vic_submit</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">

    </style>
    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">

    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">

    </style>
    <style name="Widget.App.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/primary_text</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorError">@color/alert</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

    <style name="FormField.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="ThemeOverlay.App.DropDownLayout" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorError">@color/alert</item>
        <item name="android:textColor">@color/alert</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>






    <style name="AppTheme.ExposedDropdownMenu"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- color of box ONLY, not dropdown -->
        <item name="boxBackgroundColor">@color/white</item>
        <!-- the box outline color depending on state
             (default, enabled, hovered, focused, but NOT error) -->
        <item name="boxStrokeColor">@color/primary</item>
        <!-- the box outline color just for errors -->
        <item name="boxStrokeErrorColor">@color/alert</item>
        <!-- enable 8dp space below the box for error message -->
        <item name="errorEnabled">true</item>
        <!-- the hint INSIDE the box, before focusing the TextInputEditText -->
        <item name="android:textColorHint">@color/primary</item>
        <!-- the hint ON TOP of the box, when the TextInputEditText is focused -->
        <item name="hintTextColor">@color/primary_text</item>
        <!-- Gain access to additional styling for the child AutoCompleteTextView,
             which includes this spinner's dropdown/popup menu -->
        <item name="materialThemeOverlay">@style/AppTheme.ExposedDropdownMenu.MaterialThemeOverlay</item>
    </style>

    <!-- customization of the material theme for use as
         an overlay for the ExposedDropdownMenu style  -->
    <style name="AppTheme.ExposedDropdownMenu.MaterialThemeOverlay"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- background color of dropdown (popup) items -->
        <item name="colorSurface">@color/primary</item>
        <!--
         When this overlay is applied, the AutoCompleteTextView
         loses padding. Luckily, we can restore it by defining
         a style that should be applied to all AutoCompletTextView(s)
         in this theme/overlay
         -->
        <item name="autoCompleteTextViewStyle">@style/AppTheme.ExposedDropdownMenu.AutoCompleteStyle</item>
    </style>

    <!-- style the AutoCompleteTextView of our material spinner -->
    <style name="AppTheme.ExposedDropdownMenu.AutoCompleteStyle">
        <!-- restore padding to sanity -->
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- style for material spinner 'item' layout -->
    <style name="MaterialSpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/white</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>